{
  "extends": ["next/core-web-vitals", "next/typescript", "prettier"],
  "plugins": ["check-file"],
  "rules": {
    "no-unused-vars": ["warn"],
    "@typescript-eslint/no-unused-vars": "warn",
    "prefer-arrow-callback": ["error", { "allowNamedFunctions": true }],
    "prefer-template": "error",
    "semi": ["error"],
    "quotes": ["error", "double"]
